def birthdayCakeCandles(ar):
  candleHeights = ar
  highestHeight = 0
  count = 0

  for candleHeight in candleHeights:
    if candleHeight >= highestHeight:
      if candleHeight == highestHeight:
        count += 1
      else:
        highestHeight = candleHeight
        count = 1

  return count


# test cases
print birthdayCakeCandles([3,2,1,3]) # 2
