def staircase(steps):
  for step in range(1, steps + 1):
    spaces = steps - step
    pounds = step

    line = ''
    for space in range(spaces):
      line += ' '
    for pound in range(pounds):
      line += '#'

    print(line)


# test cases

staircase(4)
#      # 3/1
#     ##
#    ###
#   #### 0/4

staircase(6)
#      #
#     ##
#    ###
#   ####
#  #####
# ######
